FROM debian:latest

# Atualiza pacotes e instala ferramentas essenciais
RUN apt-get update && apt-get install -y \
    sudo \
    bash \
    curl \
    git \
    vim \
    unzip \
    wget \
    python3 \
    python3-pip \
    python3-venv \
    nodejs \
    npm \
    ripgrep \
    fd-find \
    luarocks \
    gcc \
    make \
    build-essential \
    pkg-config \
    libtool \
    libffi-dev \
    libssl-dev \
    libxml2-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    zlib1g-dev \
    tzdata \
    fuse \
    bash-completion \
    tmux \
    zsh \
    software-properties-common \
    iputils-ping

# Instala Neovim v0.11.0 via AppImage
RUN curl -LO https://github.com/neovim/neovim/releases/download/v0.11.0/nvim-linux-x86_64.appimage && \
    chmod u+x nvim-linux-x86_64.appimage && \
    ./nvim-linux-x86_64.appimage --appimage-extract && \
    mv squashfs-root /nvim && \
    ln -s /nvim/AppRun /usr/local/bin/nvim && \
    rm nvim-linux-x86_64.appimage

# Cria o usuário 'devuser'
RUN useradd -m -s /bin/zsh -G sudo devuser && echo 'devuser ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/devuser

# Troca para o usuário devuser
USER devuser
WORKDIR /home/devuser

# Instala o Oh My Zsh
RUN sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended

# Instalação do LunarVim
RUN bash -c "$(curl -s https://raw.githubusercontent.com/LunarVim/LunarVim/master/utils/installer/install.sh)" -- --yes

# Adiciona binários locais ao PATH
ENV PATH="/home/devuser/.local/bin:$PATH"

# Cria diretórios úteis
RUN mkdir -p ~/projects ~/scripts ~/.config/lvim

# Instala pacotes Python geoespaciais/científicos
RUN pip install \
    affine==2.* \
    attrs==25.* \
    branca==0.* \
    certifi==2025.* \
    charset-normalizer==3.* \
    click==8.* \
    click-plugins==1.* \
    cligj==0.* \
    colorama==0.* \
    dnspython==2.* \
    dotenv==0.* \
    folium==0.* \
    geojson==3.* \
    geopandas==1.* \
    idna==3.* \
    Jinja2==3.* \
    MarkupSafe==3.* \
    numpy==2.* \
    packaging==24.* \
    pandas==2.* \
    pymongo==4.* \
    pyogrio==0.* \
    pyparsing==3.* \
    pyproj==3.* \
    python-dateutil==2.* \
    python-dotenv==1.* \
    pytz==2025.* \
    rasterio==1.* \
    requests==2.* \
    scipy==1.* \
    shapely==2.* \
    simplekml==1.* \
    six==1.* \
    tzdata==2025.* \
    urllib3==2.* \
    xyzservices==2025.* \
    --break-system-packages

# Instala LazyGit
RUN sudo add-apt-repository ppa:lazygit-team/release -y && \
    sudo apt-get update && sudo apt-get install -y lazygit

# Instala LazyDocker
RUN curl https://raw.githubusercontent.com/jesseduffield/lazydocker/master/scripts/install.sh | bash

# Ativa o bash completion e auto suggestions
RUN echo "source /etc/bash_completion" >> ~/.zshrc

# Configura terminal inicial
RUN echo "cd ~/projects" >> ~/.zshrc

CMD ["/usr/bin/zsh"]
